
            <div class="content-background" >
            	<div class="content">

                    <h2>{{ 'requests'|trans|capitalize }}</h2>
                    <a style="display: inline-block ;float: right; margin-bottom: 20px" href="{{ path('app_ptc_user') }}" rel="noopener" class="btn btn--primary" >{{ 'start request'|trans|capitalize }}<span class="btn__icon icon icon-arr-forward" title="" role=""></span></a>
                    {% if resources is defined and resources is not empty %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'date'|trans|capitalize }}</th>
                            <th scope="col">{{ 'reference'|trans|capitalize }}</th>
                            <th scope="col">{{ 'subject'|trans|capitalize }}</th>
                            <th scope="col">{{ 'description'|trans|capitalize }}</th>
                            <th scope="col">{{ 'status'|trans|capitalize }}</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for resource in resources %}
                        <tr>
                            <td>{{ resource.dateCreated|date("d-m-Y") }}</td>
                            <td>{{ resource.reference }}</td>
                            <td>{{ commonground_resource(resource.processType).name|capitalize }}</td>
                            <td>{{ commonground_resource(resource.processType).description|capitalize }}</td>
                            <td>{{ resource.status|trans|capitalize }}</td>
                            <td><a href="{{ path('app_ptc_process_stage', {id: commonground_resource(resource.processType).id, request: resource['@id']}) }}">{{ 'view'|trans|capitalize }}</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% else %}
                        <aside class="hint">
                            <h2 class="hint__title">{{ 'no requests available'|trans|capitalize }}</h2>
                        </aside>
                    {% endif %}
                </div><!-- /.content -->
            </div><!-- /.content-background -->
