
            <div class="content-background" >
            	<div class="content">
                    <h2>{{ 'orders'|trans|capitalize }}</h2>
                    {% if resources is defined and resources is not empty %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'date'|trans|capitalize }}</th>
                            <th scope="col">{{ 'reference'|trans|capitalize }}</th>
                            <th scope="col">{{ 'status'|trans|capitalize }}</th>
                            <th scope="col">{{ 'amount'|trans|capitalize }}</th>
                            <th scope="col">{{ 'invoice'|trans|capitalize }}</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for resource in resources %}
                        <tr>
                            <td>{{ resource.dateCreated|date("d-m-Y") }}</td>
                            <td>{{ resource.reference|capitalize }}</td>
                            <td>{% if resource.status is defined %}{{ resource.status|capitalize }}{% else %}{{ 'n.a.'|trans|capitalize }}{% endif %}</td>
                            <td>{{ resource.price }} {{ resource.priceCurrency }}</td>
                            <td>{{ 'n.a.'|trans|capitalize }}</td>
                            <td><a href="#">{{ 'view'|trans|capitalize }}</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {% else %}
                    <aside class="hint">
                        <h2 class="hint__title">{{ 'no orders available'|trans|capitalize }}</h2>
                    </aside>
                    {% endif %}
                </div><!-- /.content -->
            </div><!-- /.content-background -->
