<div class="content-background">
    <div class="content">
        <div class="row">
            <div class="col-xs-6">
                <h2>{{ 'organizations'|trans|capitalize }}</h2>
            </div>
            <div class="col-xs-6">
                <button class="btn" style="float: right" data-toggle="modal" data-target="#myModal" onclick="openModal()">{{ 'new'|trans|capitalize }}</button>
            </div>
        </div>
        {% if resources is defined and resources is not empty %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">{{ 'name'|trans|capitalize }}</th>
                <th scope="col">{{ 'description'|trans|capitalize }}</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for resource in resources %}
            <tr>
                <td>{{ resource.name }}</td>
                {% if resource.description is defined and resource.description is not empty %}<td>{{ resource.description }}</td>{% endif %}
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        {% else %}
            <aside class="hint">
                <h2 class="hint__title">{{ 'no organizations'|trans|capitalize }}</h2>
            </aside>
        {% endif %}
    </div><!-- /.content -->
</div><!-- /.content-background -->


{% include 'wrc/modals/organization_modal.html.twig' %}
