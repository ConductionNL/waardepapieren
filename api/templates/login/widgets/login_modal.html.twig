<div class="modal modal--backdrop" role="dialog" id="myModal" tabindex="-1" aria-describedby="modal-description3">
    <section class="modal__content" role="document">
        <div class="modal__body" tabindex="0" lang="en-US">
            <div class="row" style="margin-top: 20px;">
                <div class="col-xs-6">
                    <h1>{{ 'login'|trans|capitalize }}</h1>
                </div>
                <div class="col-xs-6">
                    <button style="float: right;" class="modal__close-button">
                        <i class="icon icon-cross"></i>
                        {{ 'close'|trans|capitalize }}
                    </button>
                </div>
            </div>

            <div class="skiplink-target content" id="main-content">

                {% if application['defaultConfiguration']['configuration']['login']['idin'] is defined and application['defaultConfiguration']['configuration']['login']['idin'] %}
                    <p>
                        <a href="{{ path('app_user_idin') }}"
                           class="btn btn--idin btn-block">{{ 'iDin'|trans|capitalize }}</a></p>
                {% endif %}

                {% if application['defaultConfiguration']['configuration']['login']['facebook'] is defined and application['defaultConfiguration']['configuration']['login']['facebook'] %}
                    <p>
                        <a href="{{ path('app_user_facebook') }}"
                           class="btn btn--facebook btn-block">{{ 'facebook'|trans|capitalize }}</a></p>
                {% endif %}
                {% if application['defaultConfiguration']['configuration']['login']['gmail'] is defined and application['defaultConfiguration']['configuration']['login']['gmail'] %}
                    <p>
                        <a href="{{ path('app_user_gmail') }}"
                           class="btn btn--gmail btn-block">{{ 'gmail'|trans|capitalize }}</a></p>
                {% endif %}

                {% if application['defaultConfiguration']['configuration']['login']['digid'] is defined and application['defaultConfiguration']['configuration']['login']['digid'] %}
                    <h2 id="inloggen-verzuimloket">{{ 'for citizen'|trans|capitalize }}</h2>
                    <p>
                        <a href="{{ commonground_cleanurl({"component":"ds"}) }}?responceUrl={{ absolute_url(path('app_user_digispoof')) }}&backUrl={{ absolute_url(path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))) }}"
                           class="btn btn--digid btn-block">{{ 'digid'|trans|capitalize }}</a></p>
                {% endif %}

                {% if application['defaultConfiguration']['configuration']['login']['eherkening'] is defined and application['defaultConfiguration']['configuration']['login']['eherkening'] %}
                    <h2 id="inloggen-verzuimloket">{{ 'for businesses'|trans|capitalize }}</h2>
                    <p>
                        <a href="{{ commonground_cleanurl({"component":"eh"}) }}?responceUrl={{ absolute_url(path('app_user_eherkenning')) }}&backUrl={{ absolute_url(path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))) }}"
                           class="btn btn--eherkenning btn-block">{{ 'e-herkening'|trans|capitalize }}</a></p>
                {% endif %}

                {% if application['defaultConfiguration']['configuration']['login']['user'] is defined and application['defaultConfiguration']['configuration']['login']['user'] %}
                    <h2 id="inloggen-verzuimloket">{{ 'for employees'|trans|capitalize }}</h2>

                    <form method="post" action="{{ path('app_user_login') }}"
                          name="thisForm">

                        <div class="input">
                            <label class="input__label" for="username">{{ 'username'|trans|capitalize }}<span
                                    style="color: red">*</span></label>
                            <input required="" type="text" id="username" name="username"
                                   class="input__control input__control--l input__control--text">
                        </div>

                        <div class="input">
                            <label class="input__label" for="password">{{ 'password'|trans|capitalize }}<span
                                    style="color: red">*</span></label>

                            <input required="" type="password" id="password" name="password"
                                   class="input__control input__control--l input__control--text">
                            <i class="fas fa-eye-slash" onmouseover="mouseoverPass()" onmouseout="mouseoutPass()" role="presentation"></i>
                        </div>

                        <script>
                            function mouseoverPass(obj) {
                                var obj = document.getElementById('password');
                                obj.type = "text";
                            }
                            function mouseoutPass(obj) {
                                var obj = document.getElementById('password');
                                obj.type = "password";
                            }
                        </script>

                        <div class="input">
                            <button type="submit" id="registreren" class="btn">{{ 'login'|trans|capitalize }} <i
                                    class="icon icon-arr-forward"></i></button>
                        </div>

                        {% if application['defaultConfiguration']['configuration']['onboardId'] is defined and application['defaultConfiguration']['configuration']['onboardId'] is not empty %}
                            <p><a href="{{ path('app_ptc_process_stage',{"id":application['defaultConfiguration']['configuration']['onboardId']}) }}"
                                  class="btn btn-block">{{ 'register'|trans|capitalize }}</a></p>
                        {% else %}
                            <p><a href="{{ path('app_user_register') }}"
                                  class="btn btn-block">{{ 'register'|trans|capitalize }}</a></p>

                        {% endif %}

                    </form>
                {% endif %}
            </div>
        </div>
    </section>
</div>
