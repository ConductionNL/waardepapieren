<div style="margin-bottom: 20px;">
    <h3>{{ property.name }} {% if property.required is defined and property.required %}<span style="color: red;"><strong>*</strong></span>{% endif %}</h3>
{% if property.minItems is defined and property.minItems is not empty %}

{% set count = 1 %}
{% for count in 1..property.minItems %}
    <label class="input__label" for="{{ property.name }}">Burger Service Nummer</label>
    <input class="input__control input__control--text input__control--l" id="{{ property.name }}" type="text" name="request[properties][{{ property.name }}][{{ count }}]">
    {% set count = count + 1 %}
{% endfor %}
{% else %}
<label class="input__label" for="{{ property.name }}">Burger Service Nummer</label>
<input class="input__control input__control--text" id="{{ property.name }}" type="text" name="request[properties][{{ property.name }}]">
{% endif %}
</div>
