<div class="input input--horizontal">
    <div>
        <label class="input__label" for="{{ property.id }}">
            {% if property.icon is defined and property.icon is not empty %}
                <i style="margin-right: 10px;" class="{{ property.icon }}"></i>
            {% endif %}
            {{ property.title }} {% if property.required is defined and property.required %}<span style="color: red;"><strong>*</strong></span>{% endif %}</label>
    </div>
    {%  if property.description %}<span class="input__hint" id="{{ property.id }}_name">{{ property.description }}</span>{% endif %}
    <fieldset class="input">
        <div class="input__group input__group--checkbox">
            <input name="request[properties][{{ property.name }}]" type="checkbox" id="{{ property.id }}" value="true" class="input__control input__control--checkbox"
            {% if request['properties'][property.name] is defined and request['properties'][property.name] is not empty %} checked {% endif %}>
            <label class="input__label input__label--checkbox" for="{{ property.id }}">{{ property.title }}</label>
        </div>
    </fieldset>
</div>
