
            <div class="content-background" >
            	<div class="content">
                    <h2>{{ 'processes'|trans|capitalize }}</h2>
                    <a style="display: inline-block ;float: right; margin-bottom: 20px" href="{{ path('app_vrc_user') }}" rel="noopener" class="btn btn--primary" >{{ 'view your existing requests'|trans|capitalize }}<span class="btn__icon icon icon-arr-forward" title="" role=""></span></a>
                    {% if resources is defined and resources is not empty %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">{{ 'name'|trans|capitalize }}</th>
                            <th scope="col">{{ 'description'|trans|capitalize }}</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for resource in resources %}
                        <tr>
                            <td></td>
                            <td>{{ resource.name|capitalize }}</td>
                            <td>{{ resource.description|capitalize }}</td>
                            <td>
                                {% if resource.requireLogin is defined and resource.requireLogin == "true" and not app.user %}
                                <span class="label label--rood">{{ 'login required'|trans|capitalize }}</span>
                                {% else %}
                                <a style="background: #cfebfd; padding: 6px; border-radius: 6px" href="{{ path('app_ptc_process_stage', {id: resource.id, stage:'start'}) }}"><b>{{ 'start'|trans|capitalize }}</b></a>
                                {% endif %}</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {% else %}
                    <aside class="hint">
                        <h2 class="hint__title">{{ 'no processes available'|trans|capitalize }}</h2>
                    </aside>
                    {% endif %}
                </div><!-- /.content -->
            </div><!-- /.content-background -->
