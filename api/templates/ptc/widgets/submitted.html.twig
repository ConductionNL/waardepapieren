<div class="content-background">
    <div class="content">
        {% if process.submittedText is defined and process.submittedText is not empty %}
            {{ process.submittedText|raw }}
        {% endif %}

        <h2>
            {{ 'this request is currently'|trans|capitalize }}: {{ request.status|trans|capitalize }}
        </h2>
    </div>
</div>

<!-- Page Break -->
<div style="height: 20px"></div>
{% include 'ptc/widgets/templates.html.twig' %}

<!-- Page Break -->
<div style="height: 20px"></div>
{% include 'ptc/widgets/validations.html.twig' %}

<!-- Page Break -->
<div style="height: 20px"></div>
{% if proccess.retractable is defined and proccess.retractable %}
    <button name="request[status]" style="margin-top: 20px; background-color: red; color: white;" id="status_retrect" value="retracted" class="btn btn--block btn--primary">{{ 'retract'|trans|capitalize }}</button>
{% endif %}

{% if application['defaultConfiguration']['configuration']['changeRequest'] is defined%}
<!-- Page Break -->
<div style="height: 20px"></div>
<a style="margin-top: 20px; background-color: red; color: white;" id="status_change" value="change" class="btn btn--block btn--primary" href="{{ path('app_ptc_process_stage', {id:application['defaultConfiguration']['configuration']['changeRequest'], resources: request['@id'], parent: request['@id'], stage:'start'}) }}">{{ 'change'|trans|capitalize }}</a>
{% endif %}
