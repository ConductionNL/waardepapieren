
            <div class="content-background" >
            	<div class="content">
                    <h2>{{ 'invoices'|trans|capitalize }}</h2>
                    {% if resources is defined and resources is not empty %}
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'date'|trans|capitalize }}</th>
                            <th scope="col">{{ 'reference'|trans|capitalize }}</th>
                            <th scope="col">{{ 'status'|trans|capitalize }}</th>
                            <th scope="col">{{ 'amount'|trans|capitalize }}</th>
                            <th scope="col">{{ 'download invoice'|trans|capitalize }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for resource in resources %}
                        <tr>
                            <td>{{ resource.dateCreated|date("d-m-Y") }}</td>
                            <td>{{ resource.reference|capitalize }}</td>
                            <td>{{ resource.paid }}</td>
                            <td>{{ resource.price }} {{ resource.priceCurrency }}</td>
                            <td>
                                <a href="{{ path('app_download_invoice',{'id': resource.id}) }}">download</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% else %}
                        <aside class="hint">
                            <h2 class="hint__title">{{ 'no invoices available'|trans|capitalize }}</h2>
                        </aside>
                    {% endif %}
                </div><!-- /.content -->
            </div><!-- /.content-background -->
