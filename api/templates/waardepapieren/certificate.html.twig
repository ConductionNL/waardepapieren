{% extends "content.html.twig" %}

{% block content %}
    <div class="row">

        <div class="col-md-8 col-sm-12">
            <div class="content-background" >
                <div class="content">
                    {% if app.user|default %}
                        {% if certificate|default %}
                            <h2>{{ 'download your certificate'|trans|capitalize }}</h2>
                            <br>
                            <button href="#" class="btn btn-block">{{ 'download jwt'|trans|capitalize }}</button>
                            <a href="{{ path('app_waardepapieren_download') }}/{{ certificate.id }}.png" class="btn btn-block">{{ 'download QR-code'|trans|capitalize }}</a>
                            <button href="#" class="btn btn-block">{{ 'download PDF'|trans|capitalize }}</button>
                        {% else %}
                            <h2>{{ 'choose a certificate type'|trans|capitalize }}</h2>

                            <form action="{{ path('app_waardepapieren_certificate') }}" method="post">
                                <div class="input">
                                    <label class="input__label"
                                           for="type">{{ 'types'|trans|capitalize }}</label>
                                    <select id="type" name="type"
                                            class="input__control input__control--l input__control--select" required>
                                        <option >geboorte akte</option>
                                        <option >verblijfs geschiedenis</option>
                                        <option >uitreksel brp</option>
                                    </select>
                                </div>

                                <div class="input">
                                    <button type="submit" class="btn btn-block">{{ 'go'|trans|capitalize }}</button>
                                </div>
                            </form>
                        {% endif %}
                    {% else %}
                        <aside class="hint">
                            <h2 class="hint__title">{{ 'login required'|trans|capitalize}}</h2>
                            {{ 'you need to login before you can view this page'|trans|capitalize}}
                        </aside>
                        <a data-toggle="modal" data-target="#myModal" onclick="openModal()" class="btn btn--icon">
                            <i style="margin-right: 10px"  class="icon fas fa-lock"></i>
                            <span>{{ 'login'|trans|capitalize }}</span>
                        </a>
                    {% endif %}
                </div><!-- /.content -->
            </div><!-- /.content-background -->
        </div><!-- /.col -->
    </div>
{% endblock %}
